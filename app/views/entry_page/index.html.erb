                <td style="width:25%">&nbsp</td>
				<td>Gather Attendance<br/>
                  <% for school in @schools %>
                      &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp<a href="javascript:newWindow('/attendances?param1=<%= school.id %>')"><%= school.name %></a><br>
                  <% end %>
                </td>
				<td valign="top"><a href="/students/new">Register Student</a></td>
				<td valign="top"><a href="/reports/show?param1=test_eligibility">Students Eligible to test</a></td>
